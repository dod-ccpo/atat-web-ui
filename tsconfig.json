{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "useDefineForClassFields": false,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node",
      "vuetify",
      "cypress",
      "cypress-real-events",
      "@4tw/cypress-drag-drop",
      "@testing-library/jest-dom",
      "vitest/globals"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "vueCompilerOptions": { 
    "target": 3,
    "experimentalUseElementAccessInTemplate": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "src/**/*.spec.ts",
    "src/*.spec.ts",
    "./tests/setup.ts",
    "types/*.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress"
  ]
}
